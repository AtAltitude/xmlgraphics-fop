            <fo:table-column column-width="proportional-column-width(1)"/>
            <fo:table-column column-width="proportional-column-width(1)"/>
            <fo:table-header border="1pt solid black">
              <fo:table-row border="inherit">
                <fo:table-cell border="inherit">
                  <fo:block>Header 1.1<fo:footnote>
                      <fo:inline>*</fo:inline>
